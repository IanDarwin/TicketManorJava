<web-app
       version="3.0"
       xmlns="http://java.sun.com/xml/ns/javaee"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

	<description>TicketManor</description>
	<display-name>TicketManor</display-name>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.web</welcome-file>
	</welcome-file-list>

	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>*.web</url-pattern>
	</servlet-mapping>
	
	<listener>
	    <listener-class>com.ticketmanor.jpa.FakeDataLoaderListener</listener-class>
	</listener>

	<security-constraint>
		<display-name>Checkout/payment Area</display-name>
		<web-resource-collection>
			<web-resource-name>Administrative Area</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>administrator</role-name>
		</auth-constraint>
		<!--
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
		-->
	</security-constraint>

	<login-config>
		<auth-method>FORM</auth-method>
		<realm-name>Admistrative Area</realm-name>
		<form-login-config>
			<form-login-page>/admin/login.web</form-login-page>
			<form-error-page>/admin/loginfailure.jsp</form-error-page>
		</form-login-config>
	</login-config>


</web-app>
